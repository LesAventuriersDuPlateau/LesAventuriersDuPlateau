<h1 class="special-title">Modifier mon <br>mot de passe</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

<div class="container">
  <div class="field">
   <div style="text-align: center">
    <%= f.label :password, "Nouveau mot de passe" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
   </div>
  </div>
  <br>

  <div class="field">
   <div style="text-align: center">
    <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>
  </div>
  <br>

  <div class="actions">
   <div style="text-align: center">
    <%= f.submit "Changer le mot de passe", class: 'btn-out' %>
   </div>
  </div>
<% end %>
<br>
