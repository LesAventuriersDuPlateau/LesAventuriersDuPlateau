<h1 class="special-title">Modifier mon <br>mot de passe</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

<div class="container">
  <div class="py-2 form-group text-center">
    <label for="new-password" style="display: block" class="form-label">Nouveau mot de passe <i>(6 caract√®res minimum)</i></label>
    <%= f.password_field :password, autofocus: true, minlength: 6, autocomplete: "new-password", class: "form-input rounded-3" %>
   </div>

  <div class="py-2 form-group text-center">  
    <label for="new-password-confirmation" style="display: block" class="form-label">Confirmer le nouveau mot de passe </label>
    <%= f.password_field :password_confirmation, minlength: 6, autocomplete: "new-password", class: "form-input rounded-3" %>
  </div>
  <br>

  <div class="actions">
   <div style="text-align: center">
    <%= f.submit "Changer le mot de passe", class: 'btn-out' %>
   </div>
  </div>
<% end %>
