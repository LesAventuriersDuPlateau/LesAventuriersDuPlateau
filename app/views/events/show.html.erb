<div class="">
      <%= render @event %>
  <div class="py-3 container">
      <% if user_signed_in? && current_user.role === 'admin' %>
        <%= link_to "Corriger l'évènement", edit_event_path(@event) , class: "btn btn-custom bg-pink txt-orange m-2" %> |
        <%= link_to "Retour aux évènements", events_path , class: "btn btn-custom bg-pink txt-orange m-2" %>
        <%= button_to "Supprimer", @event, method: :delete, class: "btn btn-custom bg-pink txt-orange m-2" %>
    <% end %>
  </div>
</div>