<h2 class="title-section mb-5 text-uppercase">NOS ÉVÉNEMENTS</h2>
<% if user_signed_in? %>

<div style="text-align: center;">
    <p><strong>Devenez le Maître du jeu et créez votre propre événement :</strong></p><br>
</div>
<%= link_to "Créer un événement", new_event_path, class: "bg-green txt-grey text-decoration-none p-2 rounded-2" %>
<% end %>
<div class="d-flex m-5 justify-content-center flex-wrap">
    <% @events_true.each do |event| %>
    <div class="card m-3 col-11 col-md-5 col-xl-3 border-0">
        <img class="card-img-top img-list-event" src=" <%= event.image_url %> " alt="event image">
        <div class="card-body d-flex flex-column justify-content-center align-items-center bg-green">
        <h4 class="card-title"><%= event.title %></h4>
        <p class="card-text "><%= event.price %> €</p>
            <div class="container-fluid d-flex justify-content-center">
            <a href="<%= event_path(event) %>", class="buttonMore mx-2 p-2">Voir plus</a>
                <% if user_signed_in? %>
                <%= form_for @order do |f| %>
                <%= f.hidden_field :event_id, value: event.id %>
                <%= f.hidden_field :cart_id, value: current_user.cart.id %>
                    <button type="submit" class="buttonMore p-2">Ajouter au panier</button>
                <% end %>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>
</div>