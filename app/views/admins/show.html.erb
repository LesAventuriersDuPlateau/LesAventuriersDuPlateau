<h1>Bienvenue sur le dashboard Admin </h1>
<p>veuillez valider OU PAS les events suivants</p>

<div class="container">
  <div class="d-flex flex-wrap justify-content-center">
    <% @events_false.each do |event| %>
    <div class="col-5 m-2"> 
        <div class="card dashboardcard">
            <div class="card-header cardcolor" >Proposé par <%= User.find_by(id: event.user_id)&.pseudo %></div>
            <div class="card-body">
                <h5 class="card-title">Evénement :<%= event.title %></h5>
                <hr>
                <p class="card-text">localisation :<%= event.city %></p>
                <hr>
                <p class="card-text">description :<%= event.description %></p>
                <hr>
                <p class="card-text">date de l'évenement :<%= event.start_date %></p>
                <hr>
                <p class="card-text">prix :<%= event.price %>€</p>
            </div>
        </div>
        <div class="btn-group m-3 d-flex justify-content-between">
        <%= button_to "valider l'event", admin_path(event), method: :patch, class: 'btn-dashboard' %>
        <%= button_to "Supprimer cet event", admin_path(event), method: :delete, class: 'btn-dashboard' %>
      </div> 
    </div>    
    <% end %>
  </div>
</div>

