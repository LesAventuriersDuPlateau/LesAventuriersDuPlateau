<h1>Bienvenue sur le dashboard Admin </h1>

<p>veuillez valider OU PAS les events suivants</p>

<% @events_false.each do |event| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= event.title %></h5>
      <p class="card-text"><%= event.description %></p>
      <p class="card-text"><%= event.price %>â‚¬</p>
    </div>
    <%= form_with(model: event, url: edit_admin_path(event), method: :patch) do |form| %>
      <%= form.hidden_field :is_validate, value: true %>
      <%= form.submit "Valider l'event" %>
    <% end %>
  </div>
<% end %>

